@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container text-center">
    <h2 style="color:#EDF5E1; font-family: 'Bebas Neue', cursive;" class="display-2 text-center pb-1 pt-4">Welcome!</h2>

    
    <div class="col-lg-12 col-md-12 pt-3 p-5">
        <img src="https://www.cappex.com/sites/default/files/images/hero/college/140164_hero.jpg" style="height: auto; width: 100%; max-width: 900px;">


    </div>



    <hr />

    <h4 style="color:#EDF5E1; font-family: 'Bebas Neue', cursive;" class="display-4 text-center p-5">[Insert Student Organization Name]</h4>

    <div class="row text-center">



        <div class="col-lg-4 col-md-6 mb-4">

            <div class="card h-100">
                

                <img class="card-img-top" src="https://news.kennesaw.edu/archives/images/campus_green_0003.preview_0.jpg" alt="">

                <div class="card-body">

                    <h4 style="color: #5CDB95;font-family: 'Bebas Neue', cursive;font-family: 'Lora', serif;" class="card-title">Survey</h4>

                    <p style="color: #5CDB95;font-family: 'Bebas Neue', cursive;font-family: 'Lora', serif;" class="card-text">Come fill out a survey to help us better serve you!</p>

                </div>

                <div class="card-footer">

                    <a style="background-color:#05386B" asp-page="/Survey/Index" class="btn text-white">Find Out More!</a>

                </div>

            </div>

        </div>



        <div class="col-lg-4 col-md-6 mb-4">

            <div class="card h-100">

                <img class="card-img-top" src="https://www.rotlsummit.com/sites/default/files/110619%20DRONE%20FALL%40%20Kennesaw_RCW091.JPG" alt="">

                <div class="card-body">

                    <h4 style="color: #5CDB95;font-family: 'Bebas Neue', cursive;font-family: 'Lora', serif;" class="card-title">Leadership</h4>

                    <p style="color: #5CDB95;font-family: 'Bebas Neue', cursive;font-family: 'Lora', serif;" class="card-text">Come see our student leadership team for the upcoming school year!</p>

                </div>

                <div class="card-footer">

                    <a style="background-color:#05386B" asp-page="/Leadership/Index" class="btn text-white">Find Out More!</a>

                </div>

            </div>

        </div>



        <div class="col-lg-4 col-md-6 mb-4">

            <div class="card h-100">

                <img class="card-img-top" src="https://news.kennesaw.edu/stories/images/2019/FindYourWingsLandscape.jpg" alt="">

                <div class="card-body">

                    <h4 style="color: #5CDB95;font-family: 'Bebas Neue', cursive;font-family: 'Lora', serif;" class="card-title">Meet A Member</h4>

                    <p style="color: #5CDB95;font-family: 'Bebas Neue', cursive;font-family: 'Lora', serif;" class="card-text">Come learn more about another member of our student community!</p>

                </div>

                <div class="card-footer">

                    <a style="background-color:#05386B" asp-page="/MeetAMember/Index" class="btn text-white">Find Out More!</a>

                </div>

            </div>

        </div>



        <div class="col-lg-4 col-md-6 mb-4">

            <div class="card h-100">

                <img class="card-img-top" src="https://diversity.kennesaw.edu/images/KSU_Aerial%20View.jpg" alt="">

                <div class="card-body">

                    <h4 style="color: #5CDB95;font-family: 'Bebas Neue', cursive;font-family: 'Lora', serif;" class="card-title">Meetings</h4>

                    <p style="color: #5CDB95;font-family: 'Bebas Neue', cursive;font-family: 'Lora', serif;" class="card-text">Come see which meetings we have availble in the community!</p>

                </div>

                <div class="card-footer">

                    <a style="background-color:#05386B" asp-page="/Meeting/Index" class="btn text-white">Find Out More!</a>

                </div>

            </div>

        </div>

        <div class="col-lg-4 col-md-6 mb-4">

            <div class="card h-100">

                <img class="card-img-top" src="https://i.pinimg.com/originals/85/2e/75/852e75aa1c0fa172681ee87dd27d8f05.jpg" alt="">

                <div class="card-body">

                    <h4 style="color: #5CDB95;font-family: 'Bebas Neue', cursive;font-family: 'Lora', serif;" class="card-title">Volunteer</h4>

                    <p style="color: #5CDB95;font-family: 'Bebas Neue', cursive;font-family: 'Lora', serif;" class="card-text">Come see volunteer oppurtunities in the community!</p>

                </div>

                <div class="card-footer">

                    <a style="background-color:#05386B" asp-page="/Volunteer/Index" class="btn text-white">Find Out More!</a>

                </div>

            </div>

        </div>
        <div class="col-lg-4 col-md-6 mb-4">

            <div class="card h-100">

                <img class="card-img-top" src="https://www.flockfinance.com/wp-content/uploads/2018/06/kennesaw-campus.jpg" alt="">

                <div class="card-body">

                    <h4 style="color: #5CDB95;font-family: 'Bebas Neue', cursive;font-family: 'Lora', serif;" class="card-title">Newsletter</h4>

                    <p style="color: #5CDB95;font-family: 'Bebas Neue', cursive;font-family: 'Lora', serif;" class="card-text">Come check out the latest issue of the newsletter!</p>

                </div>

                <div class="card-footer">

                    @if (Model.Newsletter != null)
                    {
                        <a style="background-color:#05386B" href="@Model.Newsletter.Url" target="_blank" class="btn text-white">Find Out More!</a>

                    }
                    else
                    {
                        <a style="background-color:#05386B" class="btn text-white">Find Out More!</a>
                    }

                </div>

            </div>

        </div>



    </div>
</div>
