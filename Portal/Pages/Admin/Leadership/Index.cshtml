@page
@model Portal.Pages.Admin.Leadership.IndexModel
@{
    ViewData["Title"] = "Admin - Leadership";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Leadership</h2>

        </div>
        <div class="col-6 text-right">
            <a asp-page="Create" class="btn btn-primary">Create</a>

        </div>

    </div>


    @if (Model.LeadershipList == null)
    {
        <p>No leadership members.</p>
    }
    else
    {
        foreach (var item in Model.LeadershipList)
        {

            <div class="row">
                <div class="col-6">
                    <ul>
                        <li>@item.Name</li>
                        <li>@item.Position</li>
                        <li>@item.url</li>
                    </ul>


                </div>
                <div class="col-6 text-right">
                    <a asp-route-Id="@item.Id" class="btn btn-primary" asp-page="Edit">Edit</a>
                    <a asp-route-Id="@item.Id" class="btn btn-danger" asp-page="Delete">Delete</a>

                </div>
            </div>

        }


    }




</div>
