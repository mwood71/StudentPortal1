@page
@model Portal.Pages.Admin.Comment.DeleteModel
@{
    ViewData["Title"] = "Admin - Comments";
}

<form method="post">
    <div class="container">

        <input type="hidden" asp-for="Comment.Id" />
        <div class="form-group">
            <label>Name:</label>
            <input asp-for="Comment.Name" class="form-control" disabled />

        </div>
        <div class="form-group">
            <label>Position:</label>
            <input asp-for="Comment.UserComment" class="form-control" disabled />

        </div>
        <div class="form-group">
            <input class="btn btn-danger" type="submit" value="Delete" />

        </div>

    </div>

</form>
