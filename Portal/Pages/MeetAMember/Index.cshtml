@page
@model Portal.Pages.MeetAMember.IndexModel
@{
    ViewData["Title"] = "Meet A Member";
}






<div class="container">

    @if (Model.VM.MeetAMember == null)
    {
        <p style="color: #5CDB95;font-family: 'Lora', serif;">Currently working on the next post.</p>
    }
    else
    {
        <div class="row">


            <div class="offset-1 col-lg-10">

                <h4 style="color:#EDF5E1; font-family: 'Bebas Neue', cursive;" class="display-4 text-center p-5">Meet A Member</h4>
                <p style="color: #5CDB95;font-family: 'Lora', serif;" class="lead text-center">
                    <strong>By: @Model.VM.MeetAMember.Author</strong>

                </p>
                <hr>
                <div class="row text-center">
                    <div class="col-lg-12 col-md-12 p-5">
                        <img src="@Model.VM.MeetAMember.PictureURL" style="height: auto; width: 100%; max-width: 900px;">

                    </div>


                </div>
                <hr>
                @if (Model.VM.MeetAMember.Para1 != null)
                {
                    <p style="color: #5CDB95;font-family: 'Lora', serif;">@Model.VM.MeetAMember.Para1</p>

                }
                @if (Model.VM.MeetAMember.Para2 != null)
                {
                    <p style="color: #5CDB95;font-family: 'Lora', serif;">@Model.VM.MeetAMember.Para2</p>

                }
                @if (Model.VM.MeetAMember.Para3 != null)
                {
                    <p style="color: #5CDB95;font-family: 'Lora', serif;">@Model.VM.MeetAMember.Para3</p>

                }
                @if (Model.VM.MeetAMember.Para4 != null)
                {
                    <p style="color: #5CDB95;font-family: 'Lora', serif;">@Model.VM.MeetAMember.Para4</p>

                }
                @if (Model.VM.MeetAMember.Para5 != null)
                {
                    <p style="color: #5CDB95;font-family: 'Lora', serif;">@Model.VM.MeetAMember.Para5</p>

                }
                @if (Model.VM.MeetAMember.Para6 != null)
                {
                    <p style="color: #5CDB95;font-family: 'Lora', serif;">@Model.VM.MeetAMember.Para6</p>

                }
                @if (Model.VM.MeetAMember.Para7 != null)
                {
                    <p style="color: #5CDB95;font-family: 'Lora', serif;">@Model.VM.MeetAMember.Para7</p>

                }
                @if (Model.VM.MeetAMember.Para8 != null)
                {
                    <p style="color: #5CDB95;font-family: 'Lora', serif;">@Model.VM.MeetAMember.Para8</p>

                }
                @if (Model.VM.MeetAMember.Para9 != null)
                {
                    <p style="color: #5CDB95;font-family: 'Lora', serif;">@Model.VM.MeetAMember.Para9</p>

                }
                @if (Model.VM.MeetAMember.Para10 != null)
                {
                    <p style="color: #5CDB95;font-family: 'Lora', serif;">@Model.VM.MeetAMember.Para10</p>

                }




                <hr>


                <div class="card my-4">
                    <h5 style="color: #05386B;font-family: 'Lora', serif;" class="card-header">Comments:</h5>
                    <div class="card-body">
                        @if (Model.VM.CommentList.Count == 0)
                        {
                            <p style="color: #5CDB95;font-family: 'Lora', serif;">There are currently no comments.</p>
                        }

                        @foreach (var item in Model.VM.CommentList)
                        {
                            <div class="media mb-4">
                                <img style="width:50px; height:auto" class="d-flex mr-3 rounded-circle" src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcQrfpp0F3lqkdmCB-NR498Tl0V5XyrQ5KjK-g&amp;usqp=CAU" alt="comment-icon">
                                <div style="color: #05386B;font-family: 'Lora', serif;" class="media-body">
                                    <h5 style="color: #05386B;font-family: 'Lora', serif;" class="mt-0">@item.Name</h5>
                                    @item.UserComment
                                </div>
                            </div>



                        }
                        <a style="background-color: #05386B;color: #EDF5E1;font-family: 'Lora', serif;" class="btn" href="/MeetAMember/CreateComment">Leave a Comment</a>



                    </div>
                </div>







            </div>



        </div>

    }

</div>




